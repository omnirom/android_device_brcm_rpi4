<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    <!-- Nav bar button default ordering/layout -->
    <string name="config_navBarLayout" translatable="false">left;voldown,back,home,recent,volup;right,notifications,power</string>

    <integer name="quick_settings_num_columns">4</integer>

    <integer name="power_menu_lite_max_columns">4</integer>

    <bool name="config_skinnyNotifsInLandscape">false</bool>

    <!-- The default tiles to display in QuickSettings -->
    <string name="quick_settings_tiles_default" translatable="false">
        wifi,bt,dnd,airplane,location,hotspot,screenrecord,dark
    </string>

    <!-- Tiles native to System UI. Order should match "quick_settings_tiles_default" -->
    <string name="quick_settings_tiles_stock" translatable="false">
        wifi,bt,dnd,airplane,location,hotspot,screenrecord,dark,work,night,inversion,reverse
    </string>

    <!-- to hide statusbar and qs batteryy on unknown state
        needed for battery less devices -->
    <bool name="config_battery_hide_on_unknown">true</bool>
</resources>
