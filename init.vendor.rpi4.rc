import /vendor/etc/init/hw/init.rpi4.usb.rc

on early-init
    # mount debugfs
    mount debugfs /sys/kernel/debug /sys/kernel/debug mode=755

on init
    chmod 0660 /sys/class/rfkill/rfkill0/state
    chown bluetooth bluetooth /sys/class/rfkill/rfkill0/state
    chown bluetooth bluetooth /sys/class/rfkill/rfkill0/type

    # gpio
    chown system system /dev/gpiochip0
    chmod 0666 /dev/gpiochip0
    chown system system /dev/gpiochip1
    chmod 0666 /dev/gpiochip1
    mkdir /data/gpio 0777 system system

    # boot time cpufreq tuning
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor performance

    # ZRAM setup
    write /sys/block/zram0/comp_algorithm lz4
    write /proc/sys/vm/page-cluster 0
    
on fs
    mount_all /vendor/etc/fstab.rpi4

on zygote-start
    mkdir /data/vendor/wifi 0770 wifi wifi
    mkdir /data/vendor/wifi/wpa 0770 wifi wifi
    mkdir /data/vendor/wifi/wpa/sockets 0770 wifi wifi

    # Create directories for Location services
    mkdir /data/vendor/location 0770 gps gps

on property:sys.boot_completed=1
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor ${persist.rpi4.cpufreq.governor}

    # Enable ZRAM on boot_complete
    swapon_all /vendor/etc/fstab.rpi4
    write /proc/sys/vm/swappiness 100

# cpufreq tuning
on property:persist.rpi4.cpufreq.governor=* && property:sys.boot_completed=1
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor ${persist.rpi4.cpufreq.governor}

on property:persist.rpi4.cpufreq.max_freq=*
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq ${persist.rpi4.cpufreq.max_freq}

on property:ro.revision=*
    start btuart

service btuart /vendor/bin/btuart /dev/ttyAMA0 bcm43xx 3000000 flow - ${ro.serialno}
    user bluetooth
    group bluetooth net_bt_admin system

service wpa_supplicant /system/vendor/bin/hw/wpa_supplicant \
     -g@android:wpa_wlan0
     interface android.hardware.wifi.supplicant@1.0::ISupplicant default
     interface android.hardware.wifi.supplicant@1.1::ISupplicant default
     socket wpa_wlan0 dgram 660 wifi wifi
     class main
     disabled
     oneshot
